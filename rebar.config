{pre_hooks, [
    {'compile', "./pre-hooks-compile.sh"}
]}.

{post_hooks, [
    {'get-deps', "./post-hooks-get-deps.sh"},
    {'clean', "./post-hooks-clean.sh"}
]}.

{deps, [
    {snowcrash, ".*", {git, "git://github.com/apiaryio/snowcrash.git", {tag, "v0.6.66"}}, [raw]},
    {'api-blueprint', ".*", {git, "git://github.com/apiaryio/api-blueprint.git", {branch, "master"}}, [raw]}
]}.

{port_env, [
    {"DRV_CFLAGS",  "$DRV_CFLAGS -Wall -Wextra -Ideps/snowcrash/src"},
    {"DRV_LDFLAGS", "$DRV_LDFLAGS -Ldeps/snowcrash/build/out/Release -lsnowcrash -lsundown"},
    {"darwin", "DRV_CFLAGS", "$DRV_CFLAGS -mmacosx-version-min=10.5"},
    {"darwin", "DRV_LDFLAGS", "$DRV_LDFLAGS -mmacosx-version-min=10.5"},
    {"(darwin|linux|freebsd|solaris)", "DRV_LDFLAGS", "$DRV_LDFLAGS -lstdc++"}
]}.

{port_specs, [{"priv/raven.so",["c_src/*.cc"]}]}.
